{# templates/_fallback/partials/header.html.twig #}
<header class="navbar navbar-expand-md d-print-none">
    <div class="container-xl py-3">

        <!-- Navbar toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbar-menu" aria-controls="navbar-menu"
                aria-expanded="false" aria-label="Alternar navegação">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Logo -->
        <div class="ankara-logo navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
            <a href="{{ INCLUDE_PATH }}" class="img-wcag">
                {% if logo %}
                    <img class="logo navbar-brand-image-disable"
                        src="{{ INCLUDE_PATH }}assets/img/{{ logo }}" alt="Ankara">
                {% else %}
                    <p class="h1 mb-0">Ankara</p>
                {% endif %}
            </a>
        </div>

        <div class="collapse navbar-collapse" id="navbar-menu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/pagina/sobre">
                        <span class="nav-link-title text-dark fw-semibold">SOBRE NÓS</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/pagina/oficinas">
                        <span class="nav-link-title text-dark fw-semibold">OFICINAS</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ INCLUDE_PATH }}produtos">
                        <span class="nav-link-title text-dark fw-semibold">NOSSOS PRODUTOS</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ INCLUDE_PATH }}empreendedoras">
                        <span class="nav-link-title text-dark fw-semibold">EMPREENDEDORES</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ INCLUDE_PATH }}blog">
                        <span class="nav-link-title text-dark fw-semibold">BLOG</span>
                    </a>
                </li>
            </ul>
        </div>


        <div class="navbar-nav flex-row order-md-last">
            <div class="nav-item dropdown">
                <a href="{{ INCLUDE_PATH }}admin/painel" class="nav-link text-dark d-flex lh-1 p-0 px-2" aria-label="Acessar minha conta">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                         viewBox="0 0 24 24" fill="none" stroke="currentColor"
                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                         class="icon icon-1 text-red icon-tabler icons-tabler-outline icon-tabler-user-circle">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                        <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                        <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855" />
                    </svg>
                    <div class="d-none d-xl-block ps-2">
                        <div>Minha Conta</div>
                    </div>
                </a>
            </div>
            <div class="d-none d-md-flex">
                <div class="nav-item dropdown d-none d-md-flex me-3">
                    <a href="{{ INCLUDE_PATH }}carrinho" class="nav-link text-dark px-0 position-relative">
                        {% if cartCount > 0 %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                 viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                 class="icon icon-1 text-red me-2 icon-tabler icons-tabler-outline icon-tabler-shopping-cart-copy">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M4 19a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                                <path d="M11.5 17h-5.5v-14h-2" />
                                <path d="M6 5l14 1l-1 7h-13" />
                                <path d="M15 19l2 2l4 -4" />
                            </svg>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                 viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                 class="icon icon-1 text-red me-2 icon-tabler icons-tabler-outline icon-tabler-shopping-cart">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"/>
                                <path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"/>
                                <path d="M17 17h-11v-14h-2"/>
                                <path d="M6 5l14 1l-1 7h-13"/>
                            </svg>
                        {% endif %}

                        <span class="cart-count badge bg-red badge-notification text-red-fg position-absolute"
                              style="top: 0; right: 0; transform: translate(50%,-50%);
                              {% if cartCount <= 0 %}display: none;{% endif %}">
                            {{ cartCount > 9 ? '9+' : cartCount }}
                            <span class="visually-hidden">itens no carrinho</span>
                        </span>

                        Meu Carrinho
                        <span class="visually-hidden">
                            ({{ cartCount > 9 ? '9+' : cartCount }} itens)
                        </span>
                    </a>
                </div>
            </div>
            <div class="navbar-nav flex-row order-md-last">
                <div class="nav-item dropdown d-md-flex d-md-none me-3">
                    <a href="{{ INCLUDE_PATH }}carrinho" class="nav-link text-white fw-semibold px-0 position-relative">
                        {% if cartCount > 0 %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                 viewBox="0 0 24 24" fill="none" stroke="currentColor" 
                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                 class="icon icon-1 text-red icon-tabler icons-tabler-outline icon-tabler-shopping-cart-copy">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M4 19a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                                <path d="M11.5 17h-5.5v-14h-2" />
                                <path d="M6 5l14 1l-1 7h-13" />
                                <path d="M15 19l2 2l4 -4" />
                            </svg>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                 viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                 class="icon icon-1 text-red icon-tabler icons-tabler-outline icon-tabler-shopping-cart">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"/>
                                <path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"/>
                                <path d="M17 17h-11v-14h-2"/>
                                <path d="M6 5l14 1l-1 7h-13"/>
                            </svg>
                        {% endif %}

                        <span class="cart-count badge bg-red badge-notification text-red-fg position-absolute"
                              style="top: 0; right: 0; transform: translate(50%,-50%);
                              {% if cartCount <= 0 %}display: none;{% endif %}">
                            {{ cartCount > 9 ? '9+' : cartCount }}
                            <span class="visually-hidden">itens no carrinho</span>
                        </span>

                        <span class="visually-hidden">
                            Meu Carrinho ({{ cartCount > 9 ? '9+' : cartCount }} itens)
                        </span>
                    </a>
                </div>
            </div>
        </div>

    </div>
</header>

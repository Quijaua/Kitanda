<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>{{ page_title }} - {{ title }}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <link rel="icon" href="{{ INCLUDE_PATH }}assets/img/favicon.png" sizes="32x32" />
    <link rel="apple-touch-icon" href="{{ INCLUDE_PATH }}assets/img/favicon.png" />
    <meta name="msapplication-TileImage"
          content="{{ INCLUDE_PATH }}assets/img/favicon.png" />

    {# Descrição #}
    <meta name="description" content="{{ descricao|slice(0, 160)|escape }}" />
    <meta property="og:description" content="{{ descricao|escape }}" />

    {# CSS Globais/distritos #}
    <link href="{{ INCLUDE_PATH }}dist/css/tabler.min.css" rel="stylesheet"/>
    <link href="{{ INCLUDE_PATH }}dist/css/tabler-flags.min.css" rel="stylesheet"/>
    <link href="{{ INCLUDE_PATH }}dist/css/tabler-socials.min.css" rel="stylesheet"/>
    <link href="{{ INCLUDE_PATH }}dist/css/tabler-payments.min.css" rel="stylesheet"/>
    <link href="{{ INCLUDE_PATH }}dist/css/tabler-vendors.min.css" rel="stylesheet"/>
    <link href="{{ INCLUDE_PATH }}dist/css/tabler-marketing.min.css" rel="stylesheet"/>
    <link href="{{ INCLUDE_PATH }}dist/css/kitanda.min.css" rel="stylesheet"/>
    <link href="{{ INCLUDE_PATH }}assets/{{ app.theme }}/css/style.css" rel="stylesheet">
    <script src="{{ INCLUDE_PATH }}assets/google/jquery/jquery.min.js"></script>
    <link href="{{ INCLUDE_PATH }}dist/libs/npm/glider-js@1/glider.min.css" rel="stylesheet" />

    {# Se existir hcaptcha ou turnstile, inclua aqui #}
    {% if hcaptcha is defined and hcaptcha %}
        <script src="https://hcaptcha.com/1/api.js" async defer></script>
    {% elseif turnstile is defined and turnstile %}
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    {% endif %}

    <link rel="canonical" href="{{ canonical }}" />
    <meta property="og:locale"      content="pt_BR" />
    <meta property="og:type"        content="{{ og_type }}" />
    <meta property="og:title"       content="{{ og_title }}" />
    <meta property="og:description" content="{{ og_description|slice(0,120) ~ '...' }}" />
    <meta property="og:url"         content="{{ INCLUDE_PATH }}" />
    <meta property="og:site_name"   content="{{ title ?: nome }}" />
    <meta property="og:image"       content="{{ og_image }}" />
    <meta name="twitter:card"       content="summary_large_image" />
    <meta name="twitter:site"       content="@{{ title ?: nome }}" />
    <meta name="twitter:title"      value="{{ title }}" />
    <meta name="twitter:url"        value="{{ INCLUDE_PATH }}" />
    <meta name="twitter:image"      value="{{ INCLUDE_PATH }}assets/img/{{ logo }}" />
    <meta name="twitter:description" value="{{ descricao|slice(120) ~ '...' }}" />

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@graph": [
            {
                "@type": "WebSite",
                "@id": "{{ INCLUDE_PATH }}",
                "url": "{{ INCLUDE_PATH }}",
                "name": "{{ title }}",
                "isPartOf": { "@id": "{{ INCLUDE_PATH }}#website" },
                "datePublished": "2025-06-02T19:50:30+00:00",
                "dateModified": "2025-06-21T12:51:52+00:00",
                "description": "{{ descricao|slice(120) ~ '...' }}",
                "inLanguage": "pt-BR",
                "interactAction": [
                    {
                        "@type": "SubscribeAction",
                        "target": [ "{{ INCLUDE_PATH }}" ]
                    }
                ]
            },
            {
                "@type": "Organization",
                "@id": "{{ INCLUDE_PATH }}#organization",
                "name": "{{ title ?: nome }}",
                "url": "{{ INCLUDE_PATH }}",
                "logo": {
                    "@type": "ImageObject",
                    "inLanguage": "pt-BR",
                    "@id": "{{ INCLUDE_PATH }}#/schema/logo/image",
                    "url": "{{ INCLUDE_PATH }}assets/img/{{ logo }}",
                    "contentUrl": "{{ INCLUDE_PATH }}assets/img/{{ logo }}",
                    "width": 140,
                    "height": 64,
                    "caption": "{{ title ?: nome }}"
                },
                "image": { "@id": "{{ INCLUDE_PATH }}#/schema/logo/image" }
            }
        ]
    }
    </script>

    {{ fb_pixel|raw }}
    {{ gtm|raw }}
    {{ g_analytics|raw }}

<style>
  .card-img-top {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    display: block;
  }
</style>

</head>
<body id="{{ og_type }}">
    <script src="{{ INCLUDE_PATH }}dist/js/kitanda-theme.min.js" defer></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: #000;
            color: #fff;
            padding: 8px 16px;
            z-index: 1000;
            text-decoration: none;
        }

        .skip-link:focus {
            top: 0;
        }
    </style>

    <a href="#conteudo-principal" class="skip-link">
        Pular para o conteúdo principal
    </a>

    <div class="page">
        {# Inclui o header #}
        {% include 'partials/header.html.twig' %}

    {% if (td_hero and is_home) or not td_hero %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <span class="mb-3 fs-3" style="color: #b36a00">Uma iniciativa do Instituto Terra Dourada</span>
                    <h1 class="display-4 fw-bold mb-4">Mulheres Empreendedoras da Amazônia</h1>
                    <p class="lead mb-4">
                    Arte, tradição e sustentabilidade em cada peça.<br />
                    Ao comprar aqui, você apoia mulheres que transformam saberes ancestrais em identidade e resistência
                    </p>
                    <a href="/pagina/sobre" class="btn btn-terra">Saiba mais</a>
                </div>
            </div>
        </div>
    </section>
    {% endif %}


        <div id="conteudo-principal" class="page-wrapper">
            {{ page_content|raw }}
        </div>

    {% if (td_entrepreneurs and is_home) or not td_entrepreneurs %}
    <!-- Entrepreneurs Section -->
    <section id="entrepreneurs" class="section-padding verde">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="text-white fw-bold mb-4 fs-1">Conheça nossas empreendedoras</h2>
                </div>
                <div class="col-lg-6">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-light me-2 rounded-circle btn-glider-prev" style="width: 40px; height: 40px;" aria-label="Navegação por Vendedoras - anteriores">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button class="btn btn-light rounded-circle btn-glider-next" style="width: 40px; height: 40px;" aria-label="Navegação por Vendedoras - próximas">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="glider mt-4">

                {% if empreendedoras %}

                    {% for e in empreendedoras %}
                    <div class="mb-4">
                        <a href="{{ INCLUDE_PATH }}empreendedora?id={{ e.id }}" class="text-center">
                            <div class="outline-section">
                                {% if e.tem_imagem %}
                                <div class="entrepreneur-card">
                                    <span class="avatar avatar-xl rounded-circle"
                                        style="background-image: url('{{ e.imagem }}'); width: 120px; height: 120px;"></span>
                                </div>
                                {% else %}
                                <div class="entrepreneur-card">
                                    <i class="fas fa-user"></i>
                                </div>
                                {% endif %}
                                <p class="text-white fw-bold fs-3">{{ e.nome }}</p>
                                <p class="text-white small fs-4">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                                    width="24" height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="icon icon-1 icon-tabler icons-tabler-outline icon-tabler-map-pin">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"/>
                                                    <path d="M17.657 16.657l-4.243 4.243
                                                            a2 2 0 0 1 -2.827 0
                                                            l-4.244 -4.243
                                                            a8 8 0 1 1 11.314 0z"/>
                                </svg>
                                {{ e.address }}</p>
                            </div>
                        </a>
                    </div>
                    {% endfor %}

                {% endif %}

            </div>
        </div>
    </section>
    {% endif %}

        {# Inclui o footer #}
        {% include 'partials/footer.html.twig' %}

    </div>


    {# ================================
       2.3) SCRIPTS GLOBAIS (jQuery, Tabler etc.)
       ================================ #}
    <script src="{{ INCLUDE_PATH }}assets/ajax/1.14.16/jquery.mask.min.js"></script>
    <script src="{{ INCLUDE_PATH }}dist/libs/fslightbox/index.js"                    defer></script>
    <script src="{{ INCLUDE_PATH }}dist/js/tabler.min.js"                            defer></script>
    <script src="{{ INCLUDE_PATH }}dist/js/kitanda.min.js"                              defer></script>
    <script src="{{ INCLUDE_PATH }}dist/libs/npm/glider-js@1/glider.min.js"          defer></script>
    <link href="{{ INCLUDE_PATH }}dist/css/tabler-a11y.min.css" rel="stylesheet"/>
    <script src="{{ INCLUDE_PATH }}dist/js/tabler-a11y.min.js" defer></script>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            new TablerA11y({ position: 'bottom-right' });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const glideEl = document.querySelector('.glider');
            if (glideEl) {
                new Glider(glideEl, {
                    slidesToShow: 4,
                    slidesToScroll: 1,
                    draggable: true,
                    rewind: true,
                    arrows: {
                        prev: ".btn-glider-prev",
                        next: ".btn-glider-next"
                    },
                    responsive: [
                        {
                            breakpoint: 1024,
                            settings: {
                                slidesToShow: 4,
                            }
                        },
                        {
                            breakpoint: 768,
                            settings: {
                                slidesToShow: 2,
                            }
                        },
                        {
                            breakpoint: 480,
                            settings: {
                                slidesToShow: 1,
                            }
                        }
                    ]
                });
            }
        });
    </script>

    <script>
        $(document).ready(function(){
            const header = $("nav");
            const footer = $("footer");
            if (self !== top) {
                header.hide();
                footer.hide();
            }
        });
    </script>

    {# Modais de sucesso/erro #}
    {% if session.msg is defined %}
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var successModal = new bootstrap.Modal(
                    document.getElementById('modal-status-success')
                );
                successModal.show();
            });
        </script>
    {% endif %}

    {% if session.error_msg is defined %}
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var errorModal = new bootstrap.Modal(
                    document.getElementById('modal-status-error')
                );
                errorModal.show();
            });
        </script>
    {% endif %}

</body>
</html>

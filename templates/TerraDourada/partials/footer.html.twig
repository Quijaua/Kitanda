{# templates/_fallback/partials/footer.html.twig #}
    {% if (td_news and is_home) or not td_news %}
    <!-- Blog Section -->
    <section class="section-red mt-6 mb-6 p-2">
        <div class="container">
            <h2 class="fw-bold mb-5 sub-titulo">Nosso blog</h2>
            <div class="row">
                {# Pega apenas os 2 primeiros posts #}
                {% for post in footerPosts %}
                    <div class="col-lg-6 mb-4">
                        <div class="card news-card">
                            <div class="blog-image">
                                <a href="{{ INCLUDE_PATH }}post?id={{ post.id }}">
                                    <img
                                        src="{{ post.imagem }}"
                                        alt="{{ post.titulo }}"
                                        class="img-fluid w-100"
                                        style="object-fit: cover; height: 200px;"
                                    >
                                </a> 
                            </div>  
                            <div class="card-body">
                                {# Categoria principal (ou múltiplas) #}
                                {% if post.categorias is not empty %}
                                    <p class="text-yellow text-uppercase mb-2">
                                        {{ post.categorias[0].nome }}
                                    </p>
                                {% else %}
                                    <p class="text-muted mb-2">Sem categoria</p>
                                {% endif %}

                                {# Título e link para o artigo #}
                                <p class="card-title">
                                    <a href="{{ INCLUDE_PATH }}post?id={{ post.id }}" class="text-decoration-none text-dark">
                                        {{ post.titulo }}
                                    </a>
                                </p>

                                {# Data de publicação #}
                                <small class="text-muted">
                                    {{ post.data_publicacao|date("d/m/Y") }}
                                </small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="text-center mt-4">
                <a href="{{ INCLUDE_PATH }}blog" class="btn btn-outline-warning text-uppercase">Ver todos os posts</a>
            </div>
        </div>
    </section>
    {% endif %}

    <div class="row text-center mx-0">
        <div class="col-12 mb-4 text-sm-center">
	 <a href="https://moverse.ceweb.br" target="_blank">
            <img src="/assets/img/Banner-site_648x60.png" alt="Este projeto é fomentado pelo Mover-se na Web" title="Este projeto é fomentado pelo Mover-se na Web" />
	 </a>
        </div>
    </div>

    <!-- Footer -->
    <footer id="TerraDourada-rodape" class="footer marrom">
        <div class="container">
            <div class="row text-center">
                {% if (td_footer_info and is_home) or not td_footer_info %}
                <div class="col-lg-3 mb-4 text-sm-center">
                    <img src="/assets/TerraDourada/images/Logo-MEA.png" alt="" aria-hidden="true" title="Mulheres Empreendedoras da Amazônia" class="mb-2" />
                    <p>Empoderando mulheres da Amazônia através do empreendedorismo sustentável.</p>
                </div>
                {% endif %}
                
                <div class="col-lg-3 mb-4">
                    <p class="fs-3 h2">Fale com a gente</p>
                    <p><a href="{{ whatsapp ? 'https://web.whatsapp.com/send/?phone=55' ~ whatsapp ~ '&text=Ol%C3%A1!&type=phone_number&app_absent=0' : '#' }}" target="_blank"><i class="fab fa-2x fa-whatsapp me-2"></i> WhatsApp</a></p>
                    {% if (td_footer_socials and is_home) or not td_footer_socials %}
                    <p class="mt-4 fs-3 h2">Siga-nos</p>
                    <nav aria-label="Redes sociais" class="social-icons">
                        <a href="{{ facebook ?: '#' }}" target="_blank"
                            rel="noopener noreferrer"
                            aria-label="Visitar página no Facebook"
                            {% if not facebook %}class="d-none"{% endif %}>
                            <i class="fab fa-2x fa-facebook" aria-hidden="true"></i>
                        </a>
                        <a href="{{ instagram ?: '#' }}" target="_blank"
                            rel="noopener noreferrer"
                            aria-label="Visitar perfil no Instagram"
                            {% if not instagram %}class="d-none"{% endif %}>
                            <i class="fab fa-2x fa-instagram" aria-hidden="true"></i>
                        </a>
                        <a href="{{ youtube ?: '#' }}" target="_blank"
                            rel="noopener noreferrer"
                            aria-label="Visitar canal no YouTube"
                            {% if not youtube %}class="d-none"{% endif %}>
                            <i class="fab fa-2x fa-youtube" aria-hidden="true"></i>
                        </a>
                        <a href="{{ website ?: '#' }}" target="_blank"
                            rel="noopener noreferrer"
                            aria-label="Visitar site oficial"
                            {% if not website %}class="d-none"{% endif %}>
                            <i class="bi fa-2x bi-globe-americas p-2" aria-hidden="true"></i>
                        </a>
                    </nav>
                    
                    {% endif %}
                </div>
                
                <div class="col-lg-3 mb-4">
                    <p class="fs-3 h2">Informações gerais</p>
                    <ul class="list-unstyled">
                        <li><a href="#">Política de fretamento</a></li>
                        <li><a href="#">Termos e condições</a></li>
                    {% if use_privacy %}
                        <li><a href="{{ INCLUDE_PATH }}politica-de-privacidade" rel="noopener noreferrer" target="_blank">
                            Política e privacidade do cliente
                        </a></li>
                    {% else %}
                        <li><a href="{{ privacidade }}" rel="noopener noreferrer" target="_blank">
                            Política e privacidade do cliente
                        </a></li>
                    {% endif %}
                        <li><a href="{{ INCLUDE_PATH }}login" rel="noopener noreferrer" target="_blank">
                        Área de cliente
                      </a></li>

                        {% for pagina in paginas_estaticas %}
                            <li>
                                <a href="{{ INCLUDE_PATH }}pagina/{{ pagina.slug|url_encode }}" rel="noopener noreferrer" target="_blank">
                                    {{ pagina.titulo }}
                                </a>
                            </li>
                        {% endfor %}

                    </ul>
                </div>
                
                <div class="col-lg-3 mb-4">
                    <p class="fs-3 h2">Contato</p>
                    <p><i class="fas fa-envelope me-2"></i> <a href="mailto:{{ email }}">{{ email }}</a></p>
                    
                    <p class="fs-3 mt-4"><strong>Formas de pagamento</strong></p>
                    <div class="d-flexd">
                        <i class="fab fa-cc-visa me-2" style="font-size: 1.5rem;"></i>
                        <i class="fab fa-cc-mastercard me-2" style="font-size: 1.5rem;"></i>
                        <i class="fab fa-pix" style="font-size: 1.5rem;"></i>
                    </div>
                <p class="footer-linkd mt-5 footer-kitanda">
                    <a href="https://github.com/Quijaua/Kitanda" rel="noopener noreferrer" target="_blank">
                        Usamos Kitanda | Open source
                    </a>
                </p>
                </div>
            </div>
            

    <div class="row">
        <div class="col-12">
           <p class="mb-0">&copy; 2024 {{ title ?: nome }} Mulheres Empreendedoras da Amazônia. Todos os direitos reservados.</p>
        </div>
    </div>

        </div>



    </footer>




{# templates/_fallback/pages/empreendedora.html.twig #}
{# Recebe no contexto:
   - e        : array com dados da empreendedora (id, nome, imagem, address etc.)
   - produtos : array de produtos desta empreendedora (cada um com id, titulo, preco, imagem, link etc.)
   Além das variáveis gerais (INCLUDE_PATH, usuario, cartCount, nome, etc.) vindas do index.php.
#}

{# ----------- Page header (breadcrumb) ----------- #}
<div class="page-header d-print-none mt-0 pt-4">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <ol class="breadcrumb breadcrumb-muted">
                    <li class="breadcrumb-item"><a href="{{ INCLUDE_PATH }}" class="text-yellow">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ INCLUDE_PATH }}empreendedoras" class="text-yellow">Empreendedoras</a></li>
                    <li class="breadcrumb-item active">{{ e.nome }}</li>
                </ol>
            </div>
        </div>
    </div>
</div>

{# ----------- Page body ----------- #}
<div class="page-body">
    <div class="container-xl">
        <div class="row g-4">

            {# Coluna da imagem de perfil #}
            <div class="col-md-4">
                <a id="mainImageLink" data-fslightbox="gallery" href="{{ e.imagem }}">
                    <div id="mainImage"
                         class="img-responsive img-responsive-1x1 rounded-3 border"
                         style="background-image: url({{ e.imagem }}); cursor: pointer;">
                    </div>
                </a>
            </div>

            {# Coluna das informações da empreendedora #}
            <div class="col-md-8">
                <h3 style="font-size: 2.5rem; line-height: normal;">
                    {{ e.nome }}
                </h3>

                <div class="markdown mt-4">
                    <p class="d-inline-flex align-items-center text-yellow lh-1 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="icon icon-1 text-yellow icon-tabler icons-tabler-outline icon-tabler-map-pin">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
                            <path d="M17.657 16.657l-4.243 4.243
                                     a2 2 0 0 1 -2.827 0
                                     l-4.244 -4.243
                                     a8 8 0 1 1 11.314 0z" />
                        </svg>
                        {{ e.address }}
                    </p>
                    <p>{{ e.mini_bio }}</p>
                </div>

                <div class="d-flex align-items-center mt-5">
                    <p class="text-secondary mb-0 me-4">Links</p>
                    <div class="d-flex align-items-center">
                        {% if e.facebook is defined and e.facebook %}
                            <a href="{{ e.facebook }}" target="_blank" class="text-dark me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                     class="icon icon-2 text-yellow icon-tabler-brand-facebook">
                                    <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"></path>
                                </svg>
                            </a>
                        {% endif %}

                        {% if e.instagram is defined and e.instagram %}
                            <a href="{{ e.instagram }}" target="_blank" class="text-dark me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                     class="icon icon-2 text-yellow icon-tabler-brand-instagram">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8
                                             a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" />
                                    <path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
                                    <path d="M16.5 7.5v.01" />
                                </svg>
                            </a>
                        {% endif %}

                        {% if e.tiktok is defined and e.tiktok %}
                            <a href="{{ e.tiktok }}" target="_blank" class="text-dark me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                     class="icon icon-2 text-yellow icon-tabler-brand-tiktok">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M21 7.917v4.034a9.948 9.948 0 0 1 -5 -1.951v4.5
                                             a6.5 6.5 0 1 1 -8 -6.326v4.326a2.5 2.5 0 1 0 4 2v-11.5
                                             h4.083a6.005 6.005 0 0 0 4.917 4.917z" />
                                </svg>
                            </a>
                        {% endif %}

                        {% if e.site is defined and e.site %}
                            <a href="{{ e.site }}" target="_blank" class="text-dark me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                     class="icon icon-2 text-yellow icon-tabler-world">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                                    <path d="M3.6 9h16.8" />
                                    <path d="M3.6 15h16.8" />
                                    <path d="M11.5 3a17 17 0 0 0 0 18" />
                                    <path d="M12.5 3a17 17 0 0 1 0 18" />
                                </svg>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# “Destaques” dos produtos da empreendedora #}
            {% if produtos is not empty %}
                <hr class="my-5">

                <h2 class="page-title mb-5">Destaques</h2>

                <div class="row">
                    <div class="col-md-12">
                        <div class="row row-cards">
                            {% for produto in produtos %}
                                <div class="col-sm-6 col-lg-4">
                                    <div class="card card-ankara">
                                        <a href="{{ INCLUDE_PATH }}p/{{ produto.link }}" class="d-block">
                                            <img src="{{ produto.imagem }}"
                                                    class="card-img-top"
                                                    alt="{{ produto.titulo }}">
                                        </a>
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="w-100">
                                                    <h2 class="mb-0">{{ produto.titulo }}</h2>
                                                    <h2>
                                                        R$ {{ produto.preco }}
                                                    </h2>
                                                    <button class="btn btn-yellow fw-bold btn-pill w-100">Adicionar ao carrinho</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
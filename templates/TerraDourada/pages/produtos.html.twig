                </div>
            </div>
        </div>
    </div>

    <!-- Page body -->
    <div class="page-body p-2">
        <div class="container-xl">
            <div class="row g-4">

                {% if produtos %}
                    <div class="col-md-12">
                        <div class="row row-cards">
                            {% for produto in produtos %}
                                {% set imagemUrl = produto.imagem is not empty 
                                    ? (INCLUDE_PATH ~ "files/produtos/" ~ produto.id ~ "/" ~ produto.imagem)|replace({' ': '%20'}) 
                                    : INCLUDE_PATH ~ "assets/preview-image/product.jpg" 
                                %}
                                {% set precoFormatado = produto.preco
                                    |number_format(2, ',', '.') %}

                                <div class="col-sm-6 col-lg-4">
                                    <div class="card card-terra">
                                        <a href="{{ INCLUDE_PATH }}p/{{ produto.link }}" class="d-block">
                                            <img src="{{ imagemUrl }}"
                                                 class="card-img-top"
                                                 alt="{{ produto.titulo }}">
                                        </a>
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="w-100">
                                                    <h1 class="mb-1">{{ produto.titulo }}</h1>
                                                    <p class="fs-4 text-muted">{{ produto.codigo_produto }}</p>
                                                    <p>Produzido por: {{ produto.empreendedora }}</p>
                                                    <h2 class="text-yellow">
                                                        R$ {{ precoFormatado }}
                                                    </h2>
                                                    <button 
                                                        class="btn btn-yellow fw-bold btn-pill w-100 add-to-cart"
                                                        data-produto-id="{{ produto.id }}"
                                                        data-produto-estoque="{{ produto.estoque }}"
                                                    >
                                                        {% if produto.estoque %}
                                                        Adicionar ao carrinho
                                                        {% else %}
                                                        Encomendar
                                                        {% endif %}
                                                    </button>
                                                </div>
                                            </div>
                                            {% if not produto.estoque %}
                                            <p class="mt-2 text-center text-secondary">Produzido especialmente para você! Início da produção após a confirmação do pagamento.</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Paginação personalizada para TerraDourada -->
                    <div class="col-12">
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="pagination-terra">
                                {{ pagination_html|raw }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-warning w-100" role="alert">
                            <div class="d-flex">
                                <div class="alert-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         width="24" height="24"
                                         viewBox="0 0 24 24"
                                         fill="none"
                                         stroke="#a67c00"
                                         stroke-width="2"
                                         stroke-linecap="round"
                                         stroke-linejoin="round"
                                         class="icon alert-icon icon-2">
                                        <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                                        <path d="M12 9h.01"></path>
                                        <path d="M11 12h1v4h1"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="alert-title">Nenhum Produto (TerraDourada)</h4>
                                    <div class="text-secondary">
                                        O tema TerraDourada não encontrou produtos para exibir.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}

{# ----------- Script para adicionar ao carrinho via AJAX ----------- #}
<script>
    $(document).ready(function() {
        $(".add-to-cart").on("click", function(e) {
            e.preventDefault();

            var produtoId = $(this).data("produto-id");
            var produtoEstoque = $(this).data("produto-estoque");
            // Neste exemplo, fixamos quantidade = 1
            var quantidade = 1;

            $.ajax({
                url: "{{ INCLUDE_PATH }}back-end/carrinho/adicionar.php",
                method: "POST",
                dataType: 'json',
                data: {
                    produto_id: produtoId,
                    quantidade: quantidade
                },
                success: function(response) {
                    if (response.status === "sucesso") {
                        // Atualiza badge do carrinho
                        $("#cart-count")
                            .text(response.numero_itens > 9 ? '9+' : response.numero_itens)
                            .show();
                        // Exibe modal de sucesso
                        var myModal = new bootstrap.Modal(
                            document.getElementById('modal-success')
                        );
                        document.getElementById("modalMsg").textContent = 'O produto foi adicionado ao seu carrinho.';
                        myModal.show();
                    } else {
                        // Exibe modal de erro
                        var myErrorModal = new bootstrap.Modal(
                            document.getElementById('modal-error')
                        );
                        myErrorModal.show();
                    }
                },
                error: function(xhr, status, error) {
                    console.error("Erro na requisição AJAX: " + error);
                    // Opcional: exibir modal de erro genérico
                    var myErrorModal = new bootstrap.Modal(
                        document.getElementById('modal-error')
                    );
                    myErrorModal.show();
                }
            });
        });
    });
</script>
